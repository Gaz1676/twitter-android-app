<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.tweeting">

    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:name="app.tweeting.main.TweetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TweetApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="app.tweeting.activities.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="app.tweeting.activities.TweetListActivity"
            android:label="@string/app_name" />
        <activity
            android:name="app.tweeting.activities.SignupActivity"
            android:label="@string/app_name" />
        <activity
            android:name="app.tweeting.activities.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TweetListActivity"/>
        </activity>
    </application>

</manifest>