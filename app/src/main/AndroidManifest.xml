<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.tweeting">

    <application
        android:name="app.tweeting.TweetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TweetApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="app.tweeting.Welcome"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="app.tweeting.Tweet"
            android:label="@string/app_name" />
        <activity
            android:name="app.tweeting.Signup"
            android:label="@string/app_name" />
        <activity
            android:name="app.tweeting.Login"
            android:label="@string/app_name" />
    </application>

</manifest>