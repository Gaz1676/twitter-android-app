<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#ff0000" />
            <gradient android:angle="135"
                android:centerColor="#b95656"
                android:endColor="#800000"
                android:startColor="#800000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#800000" />
            <gradient android:angle="-90" android:endColor="#800000" android:startColor="#800000" />
        </shape>
    </item>
</selector>