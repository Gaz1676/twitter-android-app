<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="firstName"
        android:summary="@string/firstName_summary"
        android:title="@string/firstName"
        android:inputType="text"/>

    <EditTextPreference
        android:key="lastName"
        android:summary="@string/lastName_summary"
        android:title="@string/lastName"
        android:inputType="text"/>

    <EditTextPreference
        android:key="email"
        android:summary="@string/email_summary"
        android:title="@string/email"
        android:inputType="textEmailAddress"/>

    <EditTextPreference
        android:key="password"
        android:summary="@string/password_summary"
        android:title="@string/password"
        android:inputType="textPassword"/>


</PreferenceScreen>