<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008fc6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.tweeting.activity.Tweet">

    <ImageButton
        android:id="@+id/cleared_action"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/email_button"
        android:contentDescription="@string/clear"
        android:onClick="clearedButtonPressed"
        android:src="@drawable/cleared" />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tweet_page_button"
        android:onClick="tweetButtonPressed"
        android:text="@string/tweetButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tweetingTitle"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/cleared_action"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/tweetingTitle"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:hint="@string/tweetingTitle"
            android:maxLength="140"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </android.support.design.widget.TextInputLayout>


    <ImageButton
        android:id="@+id/emailButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/email_button"
        android:contentDescription="@string/emailTweetVia"
        android:src="@drawable/email_icon" />

</RelativeLayout>